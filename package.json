{
  "name": "nodejs-shark-demo",
  "version": "1.0.0",
  "description": "nodejs shark demo",
  "author": "Sammy the Shark <sammy@example.com>",
  "license": "MIT",
  "main": "app.js",
  "keywords": [
    "nodejs",
    "bootstrap",
    "express"
  ],
  "dependencies": {
    "express": "^4.16.4"
  },
  "scripts": {
    "dev:start": "node ./app.js",
    "prod:build": "sudo docker build -t $(cat ${DOCKERHUBUSER})/$(node -p \"try { require('./package.json').name } catch(e) {}\") .",
    "prod:start": "sudo docker run -p 8080:8080 -d --name $(node -p \"try { require('./package.json').name } catch(e) {}\") $(cat ${DOCKERHUBUSER})/$(node -p \"try { require('./package.json').name } catch(e) {}\")",
    "prod:stop": "sudo docker stop $(node -p \"try { require('./package.json').name } catch(e) {}\")",
    "prod:restart": "sudo docker start $(node -p \"try { require('./package.json').name } catch(e) {}\")"
  }
}
